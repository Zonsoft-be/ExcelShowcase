{
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true
  }
}
