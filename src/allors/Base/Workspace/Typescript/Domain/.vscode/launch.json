{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Run Tests",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--no-timeouts",
              "--colors",
              "--recursive",
              "--inspect-brk",
              "${workspaceFolder}/dist/**/*.spec.js",
          ],
          "stopOnEntry": false,
          "internalConsoleOptions": "openOnSessionStart",
          "sourceMaps": true,
          "protocol": "inspector",
          "preLaunchTask": "Compile"
      }
  ]
}